{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:vite",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "tauri": "deno run -A npm:@tauri-apps/cli"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@tiptap/extension-color": "npm:@tiptap/extension-color@^2.11.5",
    "@tiptap/extension-list-item": "npm:@tiptap/extension-list-item@^2.11.5",
    "@tiptap/extension-text-style": "npm:@tiptap/extension-text-style@^2.11.5",
    "@tiptap/react": "npm:@tiptap/react@^2.11.5",
    "@tiptap/starter-kit": "npm:@tiptap/starter-kit@^2.11.5",
    "@types/react": "npm:@types/react@^19.0.8",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.3",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "tailwindcss": "npm:tailwindcss@^4.0.4",
    "vite": "npm:vite@^6.1.0",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.4",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2",
    "@tauri-apps/plugin-shell": "npm:@tauri-apps/plugin-shell@^2",
    "@tauri-apps/cli": "npm:@tauri-apps/cli@^2"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "ES2020",
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:@types/react"
  },
  "fmt": {
    "proseWrap": "preserve"
  }
}
